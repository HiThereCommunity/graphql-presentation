class User {
  static async gen(viewer: User, id: string): Promise<?User> {
    const data = db.user.findById(id);
    if (data == null) return null;
    const canSee = checkCanSee(viewer, id);
    return canSee ? new User(data) : null;
  }

  constructor(data) {
    this.id = data.id;
    this.name = data.name;
    this.bestFriend = data.bestFriend;
  }

  async getFriends(first: number) {
    const data = await db.friends.findAll({
      where: {
        from_id: this.id
      },
      limit: first,
      attributes: ["to_id"]
    });

    return data.map(entry => User.gen(this, entry.to_id));
  }
}
